  body(ng-app="starter" id="fb-root")
    .view(ui-view autoscroll="true")


    .close-video(ng-click="$root.toggleVideo()" ng-if="$root.videoIsOpen")
        i.fa.fa-close

    .backdrop.hidden-mobile(ng-if="$root.videoIsOpen")
        .video
            #typed <span class="light">DÉCOUVREZ </span> NOON
            h1 DÈS AUJOURD'HUI
            iframe(
                width='100%'
                height='70%'
                src='https://www.youtube.com/embed/EucXzpkaAdk?rel=0'
                frameborder='0'
                allowfullscreen
            )
            iframe(
                width='80px'
                height='40px'
                src='sharefb.html'
                frameborder='0'
            )

        .description
            .title
                h1 DEVENEZ
                h1.light UN BÊTA-NOONER
                h1 EN AVANT PREMIÈRE
            .subtitle
                h4 Inscrivez vous pour rejoindre
                h4 la communauté des <span class="strong">BÊTA-NOONERS</span>

            br

            .subtitle
                h4 Et recevez des <span class="strong">NOONCODES</span> privilèges
                h4 pour votre soutien

            .get-user
                input(type="email" id="email1" placeholder="exemple@exemple.com")
            .warning
                p(ng-if="!$root.error") Saisissez votre adresse email ici
                p.red(ng-if="$root.error") Adresse email incorrect
            .click-user
                button(ng-click="$root.subscribe('email1')") S'INSCRIRE
            .warning
                p Attention nombre d'inscriptions limité



    .backdrop.visible-mobile(ng-if="$root.videoIsOpen")
        .video.mobile
            .title
                h4 DEVENEZ
                h4.light UN BÊTA-NOONER
                h4 EN AVANT PREMIÈRE
            //- .subtitle
            //-     h4 Inscrivez vous pour rejoindre
            //-     h4 la communauté des <span class="strong">BÊTA-NOONERS</span>

            iframe(
                width='100%'
                height='50%'
                src='https://www.youtube.com/embed/EucXzpkaAdk?rel=0'
                frameborder='0'
                allowfullscreen
            )

            .get-user
                input(type="email" id="email2" placeholder="exemple@exemple.com")
            .warning
                p(ng-if="!$root.error") Saisissez votre adresse email ici
                p.red(ng-if="$root.error") Adresse email incorrect
            .click-user
                button(ng-click="$root.subscribe('email2')") S'INSCRIRE
            .warning
                p Attention nombre d'inscriptions limité

